<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
   
    <title>Add New Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">

        <form action="/blog/" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="title">

                <div class="mb-3 mt-3" >
                    <label for="coverImage" class="form-label">CoverImage:</label>
                    <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
                </div>

                <div class="mb-3" >
                    <label for="body">Body</label>
                    <textarea class="form-control" name="body" placeholder="write blog here" id="body"></textarea>
                    
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary"> Submit</button>
                    
                </div>

            </div>
        </form>

    </div>

    <%- include('./partials/script') %>
</body>
</html>